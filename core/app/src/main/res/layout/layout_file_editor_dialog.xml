<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- App Name field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/app_name_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="App Name"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/app_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionNext" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- App Description field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/app_description_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="App Description (What should this app do?)"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/app_description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:gravity="top|start"
                android:imeOptions="actionDone" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Generate Button (Now triggers the full workflow) -->
        <Button
            android:id="@+id/generate_app_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate &amp; Modify App"
            android:layout_marginBottom="8dp"/>

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/loading_indicator"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <!-- Status Area -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready"
            android:textAppearance="?attr/textAppearanceBody2"
            android:layout_marginBottom="8dp"/>

        <!-- Log output area -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/log_output_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Generation Log">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/log_output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="10"
                android:maxLines="15"
                android:gravity="top|start"
                android:focusable="false"
                android:clickable="false"
                android:scrollbars="vertical"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Action Buttons (Initially hidden) -->
        <LinearLayout
            android:id="@+id/action_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/continue_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/action_continue_to_build"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/modify_further_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modify Further"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>