<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Description for App Name/Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter a new app name to create, or select an existing project to modify."
            android:textAppearance="?attr/textAppearanceCaption"
            android:layout_marginBottom="4dp"/>

        <!-- App Name field (AutoCompleteTextView) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/app_name_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="App Name (New or Existing)"
            android:layout_marginBottom="8dp">

            <AutoCompleteTextView
                android:id="@+id/app_name_autocomplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:imeOptions="actionNext"
                android:completionThreshold="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- App Description field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/app_description_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="App Description (What should this app do?)"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/app_description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:maxLines="5"
                android:gravity="top|start"
                android:imeOptions="actionNext" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- API KEY FIELD -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/api_key_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gemini API Key"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/api_key_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:imeOptions="actionNext" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ***** START: MODEL SELECTION UI ***** -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Select Gemini Model:"
            style="?android:attr/textAppearanceSmall"
            android:labelFor="@+id/model_spinner"/>

        <Spinner
            android:id="@+id/model_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:minHeight="48dp"
            android:background="@drawable/abc_spinner_textfield_background_material"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/custom_model_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Custom Model ID"
            android:visibility="gone"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/custom_model_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions"
                android:imeOptions="actionDone" />
        </com.google.android.material.textfield.TextInputLayout>
        <!-- ***** END: MODEL SELECTION UI ***** -->

        <!-- Generate Button -->
        <Button
            android:id="@+id/generate_app_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate App"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/loading_indicator"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <!-- Status Area -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready"
            android:textAppearance="?attr/textAppearanceBody2"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <!-- Log output area -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/log_output_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Generation Log"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/log_output"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:gravity="top|start"
                android:scrollbars="vertical"
                android:textAppearance="?attr/textAppearanceBody2"

                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:longClickable="true"
                android:textIsSelectable="true"
                />
            <!-- Consider removing android:maxLines if very long logs don't scroll well -->
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/action_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/continue_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/action_continue_to_build"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/modify_further_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modify Further (Dismiss)"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>